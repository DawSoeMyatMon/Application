<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.nyinyi.registrationexample.Main3Activity">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Welcome....!"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btn_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp"
        android:onClick="delete"
        android:text="Delete"
        android:textColor="@android:color/holo_blue_dark" />

    <Button
        android:id="@+id/btn_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/btn_delete"
        android:layout_alignRight="@+id/btn_delete"
        android:layout_below="@+id/btn_delete"
        android:layout_marginTop="38dp"
        android:onClick="select"
        android:text="Select"
        android:textColor="@android:color/holo_blue_dark" />

    <Button
        android:id="@+id/btn_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_select"
        android:layout_alignStart="@+id/btn_select"
        android:layout_below="@+id/btn_select"
        android:layout_marginTop="42dp"
        android:onClick="update"
        android:text="update"
        android:textColor="@android:color/holo_blue_dark" />

</RelativeLayout>
