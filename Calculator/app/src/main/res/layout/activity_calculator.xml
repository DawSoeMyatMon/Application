<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray">


    <Button
        android:id="@+id/btn_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_four"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="27dp"
        android:layout_marginLeft="55dp"
        android:layout_marginStart="55dp"
        android:onClick="oneclick"
        android:text="1" />

    <Button
        android:id="@+id/btn_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btn_one"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@+id/btn_one"
        android:layout_toRightOf="@+id/btn_one"
        android:onClick="twoclick"
        android:text="2" />

    <Button
        android:id="@+id/btn_three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btn_two"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp"
        android:layout_toEndOf="@+id/btn_two"
        android:layout_toRightOf="@+id/btn_two"
        android:onClick="threeclick"
        android:text="3" />

    <Button
        android:id="@+id/btn_four"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn_five"
        android:layout_alignBottom="@+id/btn_five"
        android:layout_alignLeft="@+id/btn_one"
        android:layout_alignStart="@+id/btn_one"
        android:onClick="fourclick"
        android:text="4" />

    <Button
        android:id="@+id/btn_five"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_two"
        android:layout_alignStart="@+id/btn_two"
        android:layout_centerVertical="true"
        android:onClick="fiveclick"
        android:text="5" />

    <Button
        android:id="@+id/btn_six"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_three"
        android:layout_alignStart="@+id/btn_three"
        android:layout_alignTop="@+id/btn_five"
        android:onClick="sixclick"
        android:text="6" />

    <Button
        android:id="@+id/btn_seven"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_zero"
        android:layout_alignLeft="@+id/btn_four"
        android:layout_alignStart="@+id/btn_four"
        android:layout_marginBottom="13dp"
        android:onClick="sevenclick"
        android:text="7" />

    <Button
        android:id="@+id/btn_eight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn_seven"
        android:layout_alignBottom="@+id/btn_seven"
        android:layout_alignLeft="@+id/btn_five"
        android:layout_alignStart="@+id/btn_five"
        android:onClick="eightclick"
        android:text="8" />

    <Button
        android:id="@+id/btn_nine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn_eight"
        android:layout_alignBottom="@+id/btn_eight"
        android:layout_alignLeft="@+id/btn_six"
        android:layout_alignStart="@+id/btn_six"
        android:onClick="nineclick"
        android:text="9" />

    <Button
        android:id="@+id/btn_zero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_div"
        android:layout_alignLeft="@+id/btn_seven"
        android:layout_alignStart="@+id/btn_seven"
        android:layout_marginBottom="24dp"
        android:onClick="zeroclick"
        android:text="0" />

    <Button
        android:id="@+id/btn_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btn_zero"
        android:layout_alignLeft="@+id/btn_eight"
        android:layout_alignStart="@+id/btn_eight"
        android:onClick="addclick"
        android:text="+" />

    <Button
        android:id="@+id/btn_sub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_nine"
        android:layout_alignStart="@+id/btn_nine"
        android:layout_alignTop="@+id/btn_add"
        android:onClick="subclick"
        android:text="-" />

    <Button
        android:id="@+id/btn_mul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_zero"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/btn_zero"
        android:layout_marginBottom="43dp"
        android:onClick="mulclick"
        android:text="*" />

    <Button
        android:id="@+id/btn_div"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn_mul"
        android:layout_alignBottom="@+id/btn_mul"
        android:layout_alignLeft="@+id/btn_add"
        android:layout_alignStart="@+id/btn_add"
        android:onClick="divclick"
        android:text="/" />

    <Button
        android:id="@+id/btn_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn_div"
        android:layout_alignBottom="@+id/btn_div"
        android:layout_alignLeft="@+id/btn_sub"
        android:layout_alignStart="@+id/btn_sub"
        android:onClick="deleteclick"
        android:text="delete" />

    <EditText
        android:id="@+id/txt_cal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_two"
        android:layout_alignEnd="@+id/btn_three"
        android:layout_alignLeft="@+id/btn_one"
        android:layout_alignRight="@+id/btn_three"
        android:layout_alignStart="@+id/btn_one"
        android:layout_marginBottom="24dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/btn_equal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="equalclick"
        android:text="="
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/txt_cal"
        android:layout_alignEnd="@+id/txt_cal"
        android:layout_marginTop="17dp" />
</RelativeLayout>
